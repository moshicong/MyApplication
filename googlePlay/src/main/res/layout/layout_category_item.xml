<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical" >
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout 
            android:orientation="vertical"
            android:background="@drawable/grid_item_bg"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1">
            <ImageView 
                android:id="@+id/category_item_iv1"
                android:src="@drawable/ic_default"
                android:layout_margin="8dp"
                android:layout_width="58dp"
                android:layout_height="58dp"/>
            <TextView 
                android:text="NBA"
                android:id="@+id/category_item_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout 
            android:orientation="vertical"
            android:background="@drawable/grid_item_bg"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <ImageView 
                android:id="@+id/category_item_iv2"
                android:src="@drawable/ic_default"
                android:layout_margin="8dp"
                android:layout_width="58dp"
                android:layout_height="58dp"/>
            <TextView 
                android:text="NBA"
                android:id="@+id/category_item_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout 
            android:orientation="vertical"
            android:background="@drawable/grid_item_bg"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <ImageView 
                android:id="@+id/category_item_iv3"
                android:src="@drawable/ic_default"
                android:layout_margin="8dp"
                android:layout_width="58dp"
                android:layout_height="58dp"/>
            <TextView 
                android:text="NBA"
                android:id="@+id/category_item_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>