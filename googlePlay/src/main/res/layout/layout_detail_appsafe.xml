<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/appsafe_icon1"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:layout_toRightOf="@id/appsafe_icon1"
            android:id="@+id/appsafe_icon2"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:layout_toRightOf="@id/appsafe_icon2"
            android:layout_marginLeft="3dp"
            android:id="@+id/appsafe_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:layout_toRightOf="@id/appsafe_icon3"
            android:layout_marginLeft="3dp"
            android:id="@+id/appsafe_icon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView 
            android:id="@+id/arrow"
            android:src="@drawable/arrow_down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    
	<LinearLayout 
	    android:id="@+id/ll_root"
	    android:padding="5dp"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <LinearLayout 
	        android:id="@+id/safe_ll1"
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <ImageView 
	            android:id="@+id/safe_selector1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/safe_des1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/safe_ll2"
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <ImageView 
	            android:id="@+id/safe_selector2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/safe_des2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/safe_ll3"
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <ImageView 
	            android:id="@+id/safe_selector3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/safe_des3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/safe_ll4"
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <ImageView 
	            android:id="@+id/safe_selector4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/safe_des4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>