<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical" >
	<LinearLayout 
	    android:orientation="vertical"
	    android:background="@drawable/list_item_bg"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <!-- 设置图,所在的控件按1:2.43设置高宽 -->
	    <com.itcast3.googleplay.ui.widget.RatioLayout
	        xmlns:googleplay="http://schemas.android.com/apk/res/com.itcast3.googleplay"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        googleplay:ratio="2.43"
	        android:padding="5dp">
	        <ImageView 
	            android:id="@+id/subject_pic_iv"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"/>
	    </com.itcast3.googleplay.ui.widget.RatioLayout>
	    <!-- 设置TextView -->
	    <TextView 
	        android:id="@+id/subject_des_tv"
	        android:textSize="16sp"
	        android:textStyle="bold"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:text="哟哟哟岂可闹,煎饼果子来一套,药药药药药药药药药药药药药药药药药药药药药药药药药药药药药药"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>